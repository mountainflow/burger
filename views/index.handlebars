<div class="container">
    <div class="row center">
        <h2>Eat-Da-Burger</h2>
    </div>

    <div class="row">
        <div class="col s3">
            <h3>Not eaten</h3>
            {{#each burger}}
            <div>
                {{#unless devoured}}
                <p>{{this.burger_name}}</p>
                <a data-id="{{this.id}}" class="waves-effect waves-light btn devour-button">Devour</a>
                <br><br>
                <hr>
                {{/unless}}
            </div>
            {{/each}}
        </div>

        <div class="col s6">
            <div class="row">
                <form class="col s6 center offset-s3">
                    <div class="row">
                        <div class="input-field">
                            <input placeholder="Enter the Burger you want to eat..." id="user-burger" type="text"
                                class="validate">
                        </div>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action" id="submit-button">Create
                        Burger
                        <i class="material-icons right">send</i>
                    </button>
                </form>
            </div>
        </div>

        <div class="col s3">
            <h3>devoured</h3>
            {{#each burger}}
            <div>
                {{#if devoured}}
                <p>{{this.burger_name}}</p>
                <a data-id="{{this.id}}" class="waves-effect waves-light btn delete-button">Delete</a>
                <br><br>
                <hr>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>